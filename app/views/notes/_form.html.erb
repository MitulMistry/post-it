<%= form_for(note) do |f| %>
  <fieldset class="form-group">
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </fieldset>

  <fieldset class="form-group">
    <div class="field">
      <%= f.label :content %>
      <%= f.text_area :content, class: "form-control", rows: 5 %>
    </div>
  </fieldset>

  <fieldset class="form-group">
    <div class="field">
      <%= f.label :tag_ids, "Tags:" %>
      <%= f.collection_check_boxes(:tag_ids, user_tags, :id, :name) do |b| %>
        <%= b.label(class: "c-input c-checkbox") do %>
          <%= b.check_box(class: "check_box") %><span class="c-indicator"></span><%= b.object.name %>
        <% end %>
      <% end %>
    </div>
  </fieldset>

  <fieldset class="form-group">
    <div class="actions">
      <%= f.submit class: "btn btn-primary btn-sm" %>
    </div>
  </fieldset>
<% end %>
