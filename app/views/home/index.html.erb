<div class="main-body">
  <div class="container-fluid" style="margin-top: 30px;">
    <div class="row no-pad">

      <div class="col-md-2">
        <h5>Tags:</h5>
        <div id="tags">

        </div>

        </br>
        <%= form_for(@tag) do |f| %>
          <fieldset class="form-group">
            <div class="field">
              <%= f.label :name, text: "New tag:" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </fieldset>
          <fieldset class="form-group">
            <div class="actions">
              <%= f.submit class: "btn btn-primary btn-sm" %>
            </div>
          </fieldset>
        <% end %>

      </div>

      <div class="col-md-10">
        <div id="notes">

        </div>

        <%= form_for(@note) do |f| %>
          <h3>New note:</h3>
          <fieldset class="form-group">            
            <div class="field">
              <%= f.label :title, class: "form-control" %>
              <%= f.text_field :title, class: "form-control" %>
            </div>
          </fieldset>

          <fieldset class="form-group">
            <div class="field">
              <%= f.label :content %>
              <%= f.text_field :content %>
            </div>
          </fieldset>

          <fieldset class="form-group">
            <div class="actions">
              <%= f.submit class: "btn btn-primary btn-sm" %>
            </div>
          </fieldset>
        <% end %>
      </div>

    </div>
  </div>
</div>
